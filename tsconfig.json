    "paths": {
      "@/*": ["./*"],
      "@app": ["./app"],
      "@app/*": ["./app/*"],
      "@docs": ["./layers/docs/app"],
      "@docs/*": ["./layers/docs/app/*"],
      "@base": ["./layers/base/app"],
      "@base/*": ["./layers/base/app/*"],
      "@ui": ["./layers/ui/app"],
      "@ui/*": ["./layers/ui/app/*"],
      "@api": ["./layers/api/app"],
      "@api/*": ["./layers/api/app/*"]
    }
  }
}
